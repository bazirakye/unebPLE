<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">#170a45</item>
        <item name="colorPrimaryDark">#00008b</item>
        <item name="colorAccent">#170a45</item>


        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">-5dp</item>
    </style>
    <style name="CustomToolbarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">@drawable/custom_button</item>

           </style>

    <style name="light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/colorPrimary</item>
        <item name="backgroundcolor">#ffffff</item>
        <item name="textcolor">#000000</item>

    </style>

    <style name="darkness" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/colorPrimary</item>
        <item name="backgroundcolor">#000000</item>
        <item name="textcolor">#ffffff</item>

    </style>
    <style name="PopUpStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">@drawable/custom_button</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">-5dp</item>
    </style>

</resources>
